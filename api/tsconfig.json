{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./app",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": ["app/@types", "node_modules/@types"],
    },
    "include": [
        "app/**/*.ts",
    ],
    "exclude": [
        "typings/*",
        "node_modules",
        ".vscode",
    ]
}
